<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="bottom">

    <TextView
        android:id="@+id/operats"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:fontFamily="sans-serif-light"
        android:text="@string/math.operation"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:paddingTop="36sp"
        android:paddingEnd="20sp"
        android:gravity="end"
        android:ellipsize="start"
        android:maxLines="1"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="@string/math.result"
        android:fontFamily="sans-serif-light"
        android:textSize="27sp"
        android:textColor="@color/gray_res"
        android:paddingEnd="20sp"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        tools:ignore="RtlSymmetry"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/but_c"
                style="@style/opersAddB"
                android:text="@string/oper.a.c" />

            <TextView
                android:id="@+id/but_pm"
                style="@style/opersAddB"
                android:text="@string/oper.a.pm" />

            <TextView
                android:id="@+id/but_pr"
                style="@style/opersAddB"
                android:text="@string/oper.a.pr" />

            <TextView
                android:id="@+id/but_dv"
                style="@style/opersB"
                android:text="@string/oper.dv" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/but_7"
                style="@style/numbersB"
                android:text="@string/num.7" />

            <TextView
                android:id="@+id/but_8"
                style="@style/numbersB"
                android:text="@string/num.8" />

            <TextView
                android:id="@+id/but_9"
                style="@style/numbersB"
                android:text="@string/num.9" />

            <TextView
                android:id="@+id/but_ml"
                style="@style/opersB"
                android:text="@string/oper.ml" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/but_4"
                style="@style/numbersB"
                android:text="@string/num.4" />

            <TextView
                android:id="@+id/but_5"
                style="@style/numbersB"
                android:text="@string/num.5" />

            <TextView
                android:id="@+id/but_6"
                style="@style/numbersB"
                android:text="@string/num.6" />

            <TextView
                android:id="@+id/but_mn"
                style="@style/opersB"
                android:text="@string/oper.mn" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/but_1"
                style="@style/numbersB"
                android:text="@string/num.1" />

            <TextView
                android:id="@+id/but_2"
                style="@style/numbersB"
                android:text="@string/num.2" />

            <TextView
                android:id="@+id/but_3"
                style="@style/numbersB"
                android:text="@string/num.3" />

            <TextView
                android:id="@+id/but_pl"
                style="@style/opersB"
                android:text="@string/oper.pl" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/but_0"
                style="@style/numbersB"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingTop="16dp"
                android:paddingStart="32dp"
                android:text="@string/num.0"
                android:layout_width="184dp"/>

            <TextView
                android:id="@+id/but_d"
                style="@style/numbersB"
                android:text="@string/num.d" />

            <TextView
                android:id="@+id/but_eq"
                style="@style/opersB"
                android:text="@string/oper.eq" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>